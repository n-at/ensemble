<div class="form-floating mb-3">
    <input type="text" id="login" name="login" class="form-control" value="{{user_control.Login}}" placeholder="Unique user name" required>
    <label for="login">Login</label>
</div>

{% if mode == "create" %}
    <div class="form-floating mb-3">
        <input type="password" id="password" name="password" class="form-control" value="" placeholder="User password" required>
        <label for="password">Password</label>
    </div>
{% elif mode == "edit" %}
    <div class="form-floating mb-3">
        <input type="password" id="password" name="password" class="form-control" value="" placeholder="User password">
        <label for="password">Password</label>
    </div>
    <p class="text-secondary">
        Leave password field blank to keep current value
    </p>
{% endif %}

<div class="mb-3">
    <label class="form-label">User role</label>
    <div class="form-check">
        <input type="radio"
               class="form-check-input"
               name="role"
               id="role-admin"
               value="1"
               {% if user_control.Role == 1 %}checked{% endif %}
        >
        <label for="role-admin" class="form-check-label">Admin</label>
    </div>
    <div class="form-check">
        <input type="radio"
               class="form-check-input"
               name="role"
               id="role-operator"
               value="2"
               {% if user_control.Role == 2 or not user_control.Role %}checked{% endif %}
        >
        <label for="role-operator" class="form-check-label">Operator</label>
    </div>
</div>
<hr>
<div class="mb-3 text-end">
    <button type="submit" class="btn btn-primary">
        Save user
    </button>
</div>
